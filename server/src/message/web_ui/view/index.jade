doctype html
html
	head
		meta(charset="UTF-8")
		title chat
		
		// general style
		link(rel="stylesheet", href="css/font.css", type="text/css")
		link(rel="stylesheet", href="css/template.css", type="text/css")

		// user style
		link(rel="stylesheet", href="css/style.css", type="text/css")

	body.font-hei
		div.chat-history#chat-history
			h1 chat on page
		div.send-editor
			div.author-container
				input(type="text", placeholder="email")#author
			div.content-container
				textarea#content
			button#send(accesskey="s") send
			span.shortcut alt+s

		div.template
			div.chat-item
				div.face
					img
				strong.author jack@gmail.com
				div.content content

		// auto generated scripts
		script(type="text/javascript", src="js/json-request.js")
		script(type="text/javascript", src="js/web-api.js")

		// user scripts
		script(type="text/javascript", src="js/md5.js")
		script(type="text/javascript", src="js/ui.js")
		script(type="text/javascript", src="js/app.js")
